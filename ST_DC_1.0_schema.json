{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"description": "Standardised Trust Documentary Credit (DC) JSON Schema, 2024-06, aligned with ST_DC_SemanticModel_1.0_2024_June.xlsx",
	"type": "object",
	"properties": {
		"lifeCycleAction": {
			"description": "In which lifecycle the documentary credit is, set with enumeration values",
			"oneOf": [
				{
					"$ref": "#/definitions/lifeCycleActions"
				},
				{
					"type": "array",
					"minItems": 1,
					"maxItems": 1,
					"uniqueItems": true,
					"items": {
						"$ref": "#/definitions/lifeCycleActions"
					}
				}
			]
		},
		"coverLetter": {
			"type": "object",
			"properties": {
				"lifeCycleSequence": {
					"type": "string"
				},
				"date": {
					"description": "Cover letter date/time",
					"$ref": "#/definitions/dateChoice"
				},
				"text": {
					"description": "Cover letter instructions from one party to another in a life-cycle event or its sequence",
					"type": "object",
					"$ref": "#/definitions/instruction"
				}
			},
			"required": [
				"lifeCycleSequence",
				"date",
				"text"
			]
		},
		"references": {
			"description": "A combo of actual documentary credit reference value and the party setting the reference. May exist many times, one per party to refer uniquely.",
			"type": "array",
			"items": {
				"$ref": "#/definitions/reference"
			}
		},
		"settings": {
			"description": "documentary credit basic settings",
			"type": "array",
			"items": {
				"$ref": "#/definitions/settingsDC"
			}
		},
		"parties": {
			"description": "documentary credit party from ready-made party type list with all details included",
			"type": "array",
			"items": {
				"$ref": "#/definitions/party"
			}
		},
		"documentaryCreditAmount": {
			"description": "documentary credit amount with currency",
			"$ref": "#/definitions/amountWithCurrency"
		},
		"creditAmountTolerance": {
			"description": "Defined amount tolerance within which the documentary credit can vary.",
			"$ref": "#/definitions/amountTolerance"
		},
		"additionalAmountsCovered": {
			"description": "Additional, type coded amounts within the documentary credit",
			"type": "array",
			"items": {
				"$ref": "#/definitions/amountCovered"
			}
		},
		"contractAmount": {
			"description": "contract amount with currency, if differing from documentary credit amount",
			"$ref": "#/definitions/amountWithCurrency"
		},
		"availableWithBy": {
			"description": "By which action the credit is available",
			"$ref": "#/definitions/available"
		},
		"issuanceDetails": {
			"description": "Details for documentary credit issuance",
			"type": "object",
			"properties": {
				"type": {
					"description": "documentary credit issuance type code from ready-made enumeration list, used only in issuance life-cycle",
					"oneOf": [
						{
							"$ref": "#/definitions/issuanceTypes"
						},
						{
							"type": "array",
							"minItems": 1,
							"maxItems": 1,
							"uniqueItems": true,
							"items": {
								"$ref": "#/definitions/issuanceTypes"
							}
						}
					]
				},
				"date": {
					"description": "Date of documentary credit issuance",
					"$ref": "#/definitions/dateChoice"
				},
				"place": {
					"description": "Place of documentary credit issuance",
					"type": "object",
					"$ref": "#/definitions/location"
				}
			},
			"required": [
				"type",
				"date",
				"place"
			],
			"additionalProperties": false
		},
		"expiryDetails": {
			"description": "Expiry details; now only date and free text.  Availability to add more when needed",
			"type": "object",
			"properties": {
				"date": {
					"description": "Either fixed date of expiry.",
					"$ref": "#/definitions/dateChoice"
				},
				"additionalInformation": {
					"description": "free text information, or use of URL for ready-made text reference",
					"type": "object",
					"$ref": "#/definitions/uriTextChoice"
				}
			},
			"required": [
				"date"
			],
			"additionalProperties": false
		},
		"governanceRules": {
			"description": "Definition of documentary credit rule set",
			"type": "object",
			"properties": {
				"ruleIdentifier": {
					"oneOf": [
						{
							"$ref": "#/definitions/ruleIdentifiers"
						},
						{
							"type": "array",
							"minItems": 1,
							"maxItems": 1,
							"uniqueItems": true,
							"items": {
								"$ref": "#/definitions/ruleIdentifiers"
							}
						}
					]
				}
			},
			"required": [
				"ruleIdentifier"
			]
		},
		"charges": {
			"description": "Charges definitions by each and every party needed",
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"type": {
						"description": "type of a charge",
						"oneOf": [
							{
								"$ref": "#/definitions/chargeTypes"
							},
							{
								"type": "array",
								"minItems": 1,
								"maxItems": 1,
								"uniqueItems": true,
								"items": {
									"$ref": "#/definitions/chargeTypes"
								}
							}
						]
					},
					"amount": {
						"description": "documentary credit charges amount with currency",
						"$ref": "#/definitions/amountWithCurrency"
					},
					"payableByParty": {
						"description": "documentary credit party from ready-made enumeration list",
						"oneOf": [
							{
								"$ref": "#/definitions/partyTypes"
							},
							{
								"type": "array",
								"minItems": 1,
								"maxItems": 1,
								"uniqueItems": true,
								"items": {
									"$ref": "#/definitions/partyTypes"
								}
							}
						]
					},
					"chargesInformation": {
						"description": "free text of possible additional charges information, or use of URL for ready-made text reference",
						"type": "object",
						"$ref": "#/definitions/uriTextChoice"
					}
				},
				"required": [
					"type",
					"amount",
					"payableByParty"
				],
				"additionalProperties": false
			}
		},
		"documentaryCreditAccounts": {
			"description": "Bank accounts related to the documentary credit",
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"documentaryCreditAccountType": {
						"description": "type of a documentary credit bank account",
						"oneOf": [
							{
								"$ref": "#/definitions/documentaryCreditAccountTypes"
							},
							{
								"type": "array",
								"minItems": 1,
								"maxItems": 1,
								"uniqueItems": true,
								"items": {
									"$ref": "#/definitions/documentaryCreditAccountTypes"
								}
							}
						]
					},
					"accountType": {
						"description": "bank account type",
						"oneOf": [
							{
								"$ref": "#/definitions/accountTypes"
							},
							{
								"type": "array",
								"minItems": 1,
								"maxItems": 1,
								"uniqueItems": true,
								"items": {
									"$ref": "#/definitions/accountTypes"
								}
							}
						]
					},
					"identification": {
						"description": "Bank Account / Alias identifier",
						"type": "string",
						"minLength": 1,
						"maxLength": 35
					},
					"currency": {
						"$ref": "#/definitions/currency"
					}
				},
				"required": [
					"documentaryCreditAccountType",
					"accountType",
					"identification"
				],
				"additionalProperties": false
			}
		},
		"milestones": {
			"description": "documentary credit milestone for partial deliveries.  only one milestone needed in a simple DC case",
			"type": "array",
			"items": {
				"$ref": "#/definitions/milestone"
			}
		},
		"signatureDetails": {
			"description": "General data on data set initiation and execution party, timestamp and signature.  Siganturtes may be many.",
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"signingParty": {
						"description": "signing party from ready-made enumeration list",
						"oneOf": [
							{
								"$ref": "#/definitions/partyTypes"
							},
							{
								"type": "array",
								"minItems": 1,
								"maxItems": 1,
								"uniqueItems": true,
								"items": {
									"$ref": "#/definitions/partyTypes"
								}
							}
						]
					},
					"signature": {
						"description": "any formatted signature, now a simple Base64 assumption",
						"type": "string",
						"contentEncoding": "base64"
					},
					"initiatingParty": {
						"description": "initiating party from ready-made enumeration list",
						"oneOf": [
							{
								"$ref": "#/definitions/partyTypes"
							},
							{
								"type": "array",
								"minItems": 1,
								"maxItems": 1,
								"uniqueItems": true,
								"items": {
									"$ref": "#/definitions/partyTypes"
								}
							}
						]
					},
					"executingParty": {
						"description": "executing party from ready-made enumeration list",
						"oneOf": [
							{
								"$ref": "#/definitions/partyTypes"
							},
							{
								"type": "array",
								"minItems": 1,
								"maxItems": 1,
								"uniqueItems": true,
								"items": {
									"$ref": "#/definitions/partyTypes"
								}
							}
						]
					},
					"status": {
						"description": "status code from ready-made enumeration list",
						"oneOf": [
							{
								"$ref": "#/definitions/statusCodes"
							},
							{
								"type": "array",
								"minItems": 1,
								"maxItems": 1,
								"uniqueItems": true,
								"items": {
									"$ref": "#/definitions/statusCodes"
								}
							}
						]
					},
					"dateOfChange": {
						"description": "Date of signature or change of the record",
						"$ref": "#/definitions/dateChoice"
					},
					"identifierPrevious": {
						"description": "UUID reference to the previously valid data set before change",
						"type": "string",
						"minLength": 1,
						"maxLength": 36
					}
				},
				"required": [
					"dateOfChange",
					"signature",
					"signingParty",
					"status"
				],
				"additionalProperties": false
			}
		}
	},
	"required": [
		"lifeCycleAction",
		"references",
		"settings",
		"parties",
		"documentaryCreditAmount",
		"availableWithBy",
		"governanceRules",
		"milestones"
	],
	"additionalProperties": false,
	"definitions": {
		"lifeCycleActions": {
			"type": "string",
			"enum": [
				"application",
				"issuance",
				"advice",
				"amendment",
				"draft notification",
				"amendment request",
				"amendment notification",
				"amendment acceptance",
				"discrepancy advice",
				"discrepancy response",
				"payment advice",
				"accept advice",
				"negotiation advice",
				"discharge advice",
				"refusal advice",
				"import payment settlement",
				"credit advice",
				"confirmation advice",
				"third bank advice",
				"presentation response",
				"discrepant presentation",
				"transfer request",
				"transfer advice",
				"transfer notification",
				"export payment settlement",
				"pre-advice",
				"acknowledgement",
				"reimbursement authorisation",
				"reimbursement claim",
				"reimbursement non-confirming",
				"reimbursement amendment"
			]
		},
		"reference": {
			"type": "object",
			"properties": {
				"identifier": {
					"description": "UUID as preferred input (https://en.wikipedia.org/wiki/Universally_unique_identifier)",
					"type": "string",
					"minLength": 1,
					"maxLength": 36
				},
				"partyType": {
					"description": "documentary credit party from ready-made enumeration list",
					"oneOf": [
						{
							"$ref": "#/definitions/partyTypes"
						},
						{
							"type": "array",
							"minItems": 1,
							"maxItems": 1,
							"uniqueItems": true,
							"items": {
								"$ref": "#/definitions/partyTypes"
							}
						}
					]
				},
				"additionalInformation": {
					"description": "free text information, or use of URL for ready-made text reference",
					"type": "object",
					"$ref": "#/definitions/uriTextChoice"
				}
			},
			"required": [
				"identifier",
				"partyType"
			],
			"additionalProperties": false
		},
		"partyTypes": {
			"type": "string",
			"enum": [
				"advising",
				"any bank",
				"applicant",
				"beneficiary",
				"confirmation",
				"issuer",
				"obligor",
				"ordering",
				"presenting",
				"second advising",
				"local issuer"
			]
		},
		"issuanceTypes": {
			"type": "string",
			"enum": [
				"irrevocable",
				"irrevocable & transferable"
			]
		},
		"expiryTypes": {
			"type": "string",
			"enum": [
				"unlimited",
				"fixed"
			]
		},
		"addressTypes": {
			"type": "string",
			"enum": [
				"postal",
				"poBox",
				"residential",
				"business",
				"mail to",
				"delivery to"
			]
		},
		"organisationIdentifierTypes": {
			"type": "string",
			"enum": [
				"BIC = business identifier code",
				"LEI = legal entity identifier",
				"bank party",
				"central bank identifier",
				"clearing identifier",
				"certificate of incorporation number",
				"country identifier code",
				"customer number",
				"DUNS",
				"employer identifier",
				"global location number",
				"SIREN",
				"SIRET",
				"tax identfier",
				"local identifier"
			]
		},
		"privateIdentifierTypes": {
			"type": "string",
			"enum": [
				"date and place of birth",
				"alien registration number",
				"passport number",
				"customer identifier number",
				"drivers license number",
				"employee identifier number",
				"national identifier number",
				"social security number",
				"tax identifier"
			]
		},
		"nameTypes": {
			"type": "string",
			"enum": [
				"doctor",
				"madam",
				"miss",
				"mister",
				"gender neutral",
				"group",
				"platform"
			]
		},
		"collateralTypes": {
			"type": "string",
			"enum": [
				"facility",
				"documentary credit",
				"other"
			]
		},
		"ruleIdentifiers": {
			"type": "string",
			"enum": [
				"UCP",
				"UCPURR",
				"EUCP",
				"EUCPURR",
				"OTHR"
			]
		},
		"transactionTypes": {
			"type": "string",
			"enum": [
				"contract",
				"delivery order",
				"proforma invoice",
				"purchase order",
				"quotation",
				"tender"
			]
		},
		"mediumTypes": {
			"type": "string",
			"enum": [
				"both paper and electronic",
				"paper",
				"electronic"
			]
		},
		"documentTypes": {
			"type": "string",
			"enum": [
				"beneficiary statement",
				"commercial invoice",
				"claim form",
				"demand",
				"transfer form",
				"warehouse receipt",
				"certificate of origin",
				"packing list",
				"bill of lading",
				"customs/goods declaration",
				"insurance certification",
				"air cargo manifest",
				"airway bill",
				"bill of exchange",
				"promissory note",
				"cargo insurance document",
				"customs bond",
				"export cargo shipping instruction",
				"letter of credit",
				"payment confirmation",
				"purchase order",
				"rail consignment (CIM) note",
				"road consignment (CMR) note",
				"sea cargo manifest",
				"sea waybill",
				"shipâ€™s delivery order"
			]
		},
		"termsTypes": {
			"type": "string",
			"enum": [
				"additional terms and conditions",
				"applied terms and conditions",
				"charge details",
				"drawing details",
				"proceeds assignable",
				"terms of effectiveness",
				"transfer",
				"terms of variation",
				"standard terms & conditions"
			]
		},
		"chargeTypes": {
			"type": "string",
			"enum": [
				"agent's commission",
				"our commission",
				"our correspondent's commission",
				"commercial discount",
				"stamp duty",
				"telecommunication",
				"transfer",
				"wharfing and warehouse",
				"confirmation",
				"acceptance",
				"advice",
				"amendment",
				"commitment",
				"courier",
				"deferred payment",
				"discrepancies",
				"forfaiting",
				"handling",
				"interest",
				"insurance premium",
				"negotiation",
				"notification",
				"observation",
				"payment",
				"postage",
				"preadvice",
				"reimbursement",
				"Swift",
				"other"
			]
		},
		"methodTypes": {
			"type": "string",
			"enum": [
				"courier",
				"email",
				"fax",
				"messenger",
				"post",
				"registered mail",
				"secure email",
				"SWIFTNet FileAct",
				"SWIFTNet InterAct",
				"SWIFT MT",
				"SWIFT MX",
				"telecommunication",
				"web upload/download"
			]
		},
		"documentaryCreditAccountTypes": {
			"type": "string",
			"enum": [
				"liability",
				"charges",
				"settlements"
			]
		},
		"accountTypes": {
			"type": "string",
			"enum": [
				"IBAN=International Bank Account Number",
				"BBAN=Basic Bank Account Number",
				"proxy/alias for the bank account number"
			]
		},
		"formatTypes": {
			"type": "string",
			"enum": [
				"Adobe pdf",
				"XML=eXtended Markup Language",
				"spreadsheet (like MS Excel)",
				"MS Word",
				"XSLT=eXtensible Stylesheet Language Transformations",
				"text file",
				"ZIP file"
			]
		},
		"terminationTypes": {
			"type": "string",
			"enum": [
				"underlying business finished",
				"tender non accpetance",
				"reduction terms fulfilled",
				"warranty obligation period expired"
			]
		},
		"demandTypes": {
			"type": "string",
			"enum": [
				"pay or extend",
				"pay only"
			]
		},
		"party": {
			"description": "documentary credit party from ready-made enumeration list",
			"type": "object",
			"properties": {
				"partyType": {
					"oneOf": [
						{
							"$ref": "#/definitions/partyTypes"
						},
						{
							"type": "array",
							"minItems": 1,
							"maxItems": 1,
							"uniqueItems": true,
							"items": {
								"$ref": "#/definitions/partyTypes"
							}
						}
					]
				},
				"name": {
					"description": "documentary credit party name",
					"type": "string"
				},
				"address": {
					"description": "documentary credit party address",
					"type": "object",
					"$ref": "#/definitions/address"
				},
				"identifier": {
					"description": "A party identifier which can be organisational or private id",
					"type": "object",
					"properties": {
						"organisationIdentifier": {
							"type": "string",
							"minLength": 1
						},
						"organisationIdentifierType": {
							"oneOf": [
								{
									"$ref": "#/definitions/organisationIdentifierTypes"
								},
								{
									"type": "array",
									"minItems": 1,
									"maxItems": 1,
									"uniqueItems": true,
									"items": {
										"$ref": "#/definitions/organisationIdentifierTypes"
									}
								}
							]
						},
						"privateIdentifier": {
							"type": "string",
							"minLength": 1
						},
						"privateIdentifierType": {
							"oneOf": [
								{
									"$ref": "#/definitions/privateIdentifierTypes"
								},
								{
									"type": "array",
									"minItems": 1,
									"maxItems": 1,
									"uniqueItems": true,
									"items": {
										"$ref": "#/definitions/privateIdentifierTypes"
									}
								}
							]
						}
					},
					"oneOf": [
						{
							"required": [
								"organisationIdentifier",
								"organisationIdentifierType"
							]
						},
						{
							"required": [
								"privateIdentifier",
								"privateIdentifierType"
							]
						}
					]
				},
				"contactDetails": {
					"description": "documentary credit party contact details",
					"type": "object",
					"$ref": "#/definitions/contactDetail"
				}
			},
			"required": [
				"partyType",
				"name",
				"address"
			],
			"additionalProperties": false
		},
		"address": {
			"type": "object",
			"properties": {
				"addressType": {
					"oneOf": [
						{
							"$ref": "#/definitions/addressTypes"
						},
						{
							"type": "array",
							"minItems": 1,
							"maxItems": 1,
							"uniqueItems": true,
							"items": {
								"$ref": "#/definitions/addressTypes"
							}
						}
					]
				},
				"department": {
					"type": "string"
				},
				"subDepartment": {
					"type": "string"
				},
				"streetName": {
					"type": "string"
				},
				"postBox": {
					"type": "string"
				},
				"buildingNumber": {
					"type": "string"
				},
				"buildingName": {
					"type": "string"
				},
				"floor": {
					"type": "string"
				},
				"postBox": {
					"type": "string"
				},
				"room": {
					"type": "string"
				},
				"postCode": {
					"type": "string"
				},
				"townName": {
					"type": "string"
				},
				"townLocationName": {
