				"date": {
					"description": "Date of document",
					"$ref": "#/definitions/dateChoice"
				},
				"settings": {
					"description": "presentation document basic settings",
					"type": "array",
					"items": {
						"$ref": "#/definitions/settingsDocument"
					}
				},
				"amountOriginals": {
					"description": "Indicates the amount of Orginals",
					"type": "number",
					"minimum": 0,
					"maximum": 100
				},
				"amountCopies": {
					"description": "Indicates the amount of Copies",
					"type": "number",
					"minimum": 0,
					"maximum": 100
				},
				"enclosedFiles": {
					"description": "Document(s) enclosed in the undertaking directly related to the undertaking",
					"$ref": "#/definitions/enclosedFile"
				},
				"additionalInformation": {
					"description": "free text information, or use of URL for ready-made text reference",
					"type": "object",
					"$ref": "#/definitions/uriTextChoice"
				}
			},
			"required": [
				"type",
				"date",
				"amountOriginals",
				"amountCopies"
			]
		},
		"confirmationTypes": {
			"type": "string",
			"enum": [
				"confirm",
				"may add",
				"without"
			]
		},
		"exceptionTypes": {
			"type": "string",
			"enum": [
				"allowed",
				"not allowed",
				"conditional"
			]
		},
		"transportationTypes": {
			"type": "string",
			"enum": [
				"air",
				"seas",
				"road",
				"rail"
			]
		},
		"incoTerm": {
			"type": "string",
			"enum": [
				"EXW - Ex Works",
				"FCA - Free Carrier",
				"CPT - Carriage Paid To",
				"CIP - Carriage and Insurance Paid to",
				"DAP - Delivered At Place",
				"DPU - Delivered at Place Unloaded",
				"DDP - Delivered Duty Paid",
				"FAS - Free Alongside Ship",
				"FOB - Free On Board",
				"CFR - Cost and Freight",
				"CIF - Cost, Insurance and Freight"
			]
		},
		"linkCode": {
			"type": "string",
			"enum": [
				"standalone",
				"alternate"
			]
		},
		"instruction": {
			"description": "instructions by any documentary credit party to another documentary credit party, with possibly many instances",
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"from": {
						"description": "documentary credit party from ready-made enumeration list",
						"oneOf": [
							{
								"$ref": "#/definitions/partyTypes"
							},
							{
								"type": "array",
								"minItems": 1,
								"maxItems": 1,
								"uniqueItems": true,
								"items": {
									"$ref": "#/definitions/partyTypes"
								}
							}
						]
					},
					"to": {
						"description": "documentary credit party from ready-made enumeration list",
						"oneOf": [
							{
								"$ref": "#/definitions/partyTypes"
							},
							{
								"type": "array",
								"minItems": 1,
								"maxItems": 1,
								"uniqueItems": true,
								"items": {
									"$ref": "#/definitions/partyTypes"
								}
							}
						]
					},
					"date": {
						"description": "Date of documentary credit instruction",
						"$ref": "#/definitions/dateChoice"
					},
					"message": {
						"description": "free text information, or use of URL for ready-made text reference",
						"type": "object",
						"$ref": "#/definitions/uriTextChoice"
					}
				},
				"required": [
					"from",
					"to",
					"date",
					"message"
				],
				"additionalProperties": false
			}
		},
		"settingsDC": {
			"type": "object",
			"properties": {
				"documentLanguage": {
					"description": "language of the documents in ISO 639-1 codes",
					"type": "string",
					"pattern": "^[a-zA-Z]{2}$"
				},
				"sanctionsIndicator": {
					"description": "true = Sanctions clauses included, false = no sanctions clauses",
					"type": "boolean"
				}
			},
			"required": [
				"documentLanguage"
			],
			"additionalProperties": false
		},
		"settingsDocument": {
			"type": "object",
			"properties": {
				"DCnumberIndicator": {
					"description": "true = DC number required within the document, false = no DC number required",
					"type": "boolean"
				},
				"documentDateIssuanceRelation": {
					"description": "Defining the document date relation to documentary credit issuance date",
					"oneOf": [
						{
							"$ref": "#/definitions/dateCodes"
						},
						{
							"type": "array",
							"minItems": 1,
							"maxItems": 1,
							"uniqueItems": true,
							"items": {
								"$ref": "#/definitions/dateCodes"
							}
						}
					]
				}
			},
			"additionalProperties": false
		},
		"dateCodes": {
			"type": "string",
			"enum": [
				"before issuance date",
				"after issuance date",
				"not before issuance date"
			]
		}
	}
}